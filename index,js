//Segunda alternativa

app.post('/user/login', async(req, res) => {
    const crm = req.body;
    firebase.auth().signInWithCrm(crm)
    .then((userCredential) => {
    var user = userCredential.user;
    res.status(201).send({ msg: "Login efetuado com sucesso!" });
    })
    .catch((error) => {
    var errorCode = error.code;
    var errorMessage = error.message;
    });
    res.status(451).send({ msg: "Login e/ou senha incorretos!" });
})
